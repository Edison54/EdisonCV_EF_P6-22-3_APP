<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EdisonCV_EF_P6_22_3_APP.Views.WelcomePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Bienvenido al programa de creacion de preguntas"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="20" TextColor="Black" />
            <Label Text="Ingrese su ID (En este caso puede probar con una id que no esta en la bd como 1 , pero si pone 3 que si esta u otras que si estan podra acceder) " TextColor="Black" />


            
            <Entry   x:Name="TxtID" Placeholder="ID" />
            <Button FontFamily="Josefinbold" 
                    x:Name="BtnIngreso" Text="Ingreso"
                    FontSize="20" CornerRadius="10" 
                    BackgroundColor="#A3F08C" 
                    Clicked="BtnIngreso_Clicked"
                    Margin="0,0,0,10"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>